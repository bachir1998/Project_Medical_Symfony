{% extends 'espace_personnel/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
  <div class="container" style="width: 70%;margin-top:50px">
    <h1>User : {{user.prenom}} {{user.nom}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('user_index') }}">back to list</a>

    <a class="btn btn-warning"  href="{{ path('user_edit', {'id': user.id}) }}">edit</a><br/>
    <br/>

    {{ include('user/_delete_form.html.twig') }}
   </div> 
{% endblock %}
